<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Uplants" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_600</item>
        <item name="colorPrimaryVariant">#51AD90</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="uplants">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#51AD90</item>
    </style>
    <style name="uplants1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/green_600</item>
    </style>
    <style name="uplants2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="head">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/green_600</item>
    </style>
    <style name="action">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="name">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/green_600</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="name1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/loadscreen</item>
    </style>
    <style name="SlideActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
    </style>
    <style name="toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:fontFamily">@font/montserratblack</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="black" parent="">
        <item name="android:font">@font/montserratblack</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>