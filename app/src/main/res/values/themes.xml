<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Uplants" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_600</item>
        <item name="colorPrimaryVariant">#51AD90</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="uplants">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#51AD90</item>
    </style>
    <style name="uplants1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/green_600</item>
    </style>
    <style name="uplants2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <style name="head">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/green_600</item>
    </style>
    <style name="action">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="name">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/green_600</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="name1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/loadscreen</item>
    </style>
    <style name="SlideActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
    </style>
    <style name="toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:fontFamily">@font/montserratblack</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="black" parent="">
        <item name="android:font">@font/montserratblack</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Widget.MaterialComponents.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="strokeColor">@color/green_600</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="ButtonOutlinedActive" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/green_600</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:state_pressed">true</item>
        <item name="android:state_enabled">true</item>
        <item name="android:state_selected">true</item> <!-- Добавьте эту строку -->
    </style>

    <style name="ButtonOutlinedInactive" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/green_600</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>m>
    </style>
    <style name="MaterialButtonToggle.WhiteGreenOption" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/green_600</item>
        <item name="strokeColor">@color/green_600</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="Widget.Material3.Button.OutlinedButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:paddingLeft">@dimen/m3_btn_padding_left</item>
        <item name="android:paddingRight">@dimen/m3_btn_padding_right</item>
        <item name="strokeColor">@color/m3_button_outline_color_selector</item>
        <item name="strokeWidth">@dimen/m3_comp_outlined_button_outline_width</item>
    </style>
    <style name="TimePickerStyle" parent="@style/Widget.MaterialComponents.TimePicker">
        <item name="android:textColorPrimary">@color/green_600</item>
        <item name="android:colorControlNormal">@color/green_600</item>
        <item name="android:textColor">@color/green_600</item>
    </style>
    <style name="Linear_Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/green_600</item>
        <item name="android:layout_marginStart">18dp</item>
    </style>

</resources>