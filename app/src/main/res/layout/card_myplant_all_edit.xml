<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cardview2"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="15dp"
    app:cardCornerRadius="50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">
        <ImageView
            android:id="@+id/info_image10"
            android:layout_marginTop="10dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_width="140dp"
            android:layout_weight="1.0"
            android:scaleType="centerCrop" />
        <EditText
            android:id="@+id/infotext11"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textSize="32dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textStyle="bold"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="Заметки"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <EditText
            android:id="@+id/infotext12"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="4dp"
            android:textSize="24sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="start|center_vertical"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="8dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="Описание"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <EditText
            android:id="@+id/infotext13"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="4dp"
            android:textSize="24sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="start|center_vertical"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="8dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="Полив"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <EditText
            android:id="@+id/infotext14"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:textSize="24dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="start|center_vertical"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="8dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="Пересадка"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <EditText
            android:id="@+id/infotext15"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="4dp"
            android:gravity="start|center_vertical"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="8dp"
            android:textSize="24dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="Удобрение"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <EditText
            android:id="@+id/infotext16"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="40dp"
            android:gravity="start|center_vertical"
            android:justificationMode="inter_word"
            android:lineSpacingExtra="8dp"
            android:textSize="24dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
    </LinearLayout>>

</androidx.cardview.widget.CardView>